@model Post

@{
    ViewBag.Title = "Edit Your Post";
}

<div class="offset-xl-1 col-xl-10">
    <div class="card">
        <p class="card-header">Edit Your Post</p>
        <div class="card-body pb-0">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="User" />
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea asp-for="Content" class="form-control" rows="15"></textarea>
                    <span class="text-danger" asp-validation-for="Content"></span>
                </div>
                <div class="form-group form-inline row justify-content-end">
                    <div class="form-group mr-3">
                        <a asp-action="Index" class="btn btn-danger">Cancel</a>
                        <button type="submit" value="Save" class="btn btn-success ml-2">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>